<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/vidoesimgage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/cardview_dark_background"
                android:clickable="true"
                android:scaleType="fitXY"
                app:srcCompat="@color/cardview_light_background" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vidoesimgage"
                android:padding="4dp"
                android:text="title of videos"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:padding="4dp"
                android:text="subtitle of videos" />

            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/add_icon"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/heart_icon"
                android:layout_toRightOf="@+id/heart_icon"
                android:clickable="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/like_icon"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_like" />

            <ImageView
                android:id="@+id/add_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:id="@+id/bottom_like"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/ic_heart" />

                <ImageView
                    android:layout_width="32dp"
                    android:id="@+id/bottom_commet"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/ic_heart" />

                <ImageView
                    android:layout_width="32dp"
                    android:id="@+id/bottom_fav"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/ic_heart" />

                <ImageView
                    android:layout_width="32dp"
                    android:id="@+id/bottom_eye"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/ic_heart" />

                <ImageView
                    android:layout_width="32dp"
                    android:id="@+id/bottom_image"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/ic_heart" />


            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>